#                          ﱦ 齃     ﮂ  ﵁ 爵        ﭵ     ﱦ  ﰊ 異 ﴱ אַ  'Y⃣'

DEFUALT_LEFT_PAD=3
DEFUALT_RIGHT_PAD=6
DEFAULT_HEIGHT=35
DEFAULT_DISPLAY=1

############## BAR ##############
sketchybar -m --bar height=$DEFAULT_HEIGHT \
                    blur_radius=0 \
                    position=top \
                    padding_left=$DEFUALT_LEFT_PAD \
                    padding_right=5 \
                    margin=0 \
                    corner_radius=0 \
                    color=0xff2E3440 \
                    border_width=0 \
                    border_color=0xff2E3440

############## GLOBAL DEFAULTS ##############
sketchybar -m --default updates=when_shown \
                        drawing=on \
                        icon.font="Hack Nerd Font:Regular:12.0" \
                        icon.color=0xffECEFF4 \
                        icon.highlight_color=0xffA3BE8C \
                        label.font="Hack Nerd Font:Regular:12.0" \
                        label.color=0xffECEFF4
                        # cache_scripts=on \

############## SPACE DEFAULTS ##############
sketchybar -m --default label.padding_left=0 \
                        label.padding_right=0 \
                        icon.padding_left=6 \
                        icon.padding_right=6

sketchybar -m --add item logo left \
              --set logo icon= \
                    background.color=0xffBF616A \
                    background.height=$DEFAULT_HEIGHT \
                    background.padding_right=0 \
                    click_script="sketchybar -m --update"

############## PRIMARY DISPLAY SPACES ##############
